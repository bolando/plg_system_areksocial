<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="system" version="3.6.5" method="upgrade">
	<name>Arek social</name>
	<author>Arkadiusz Taraszka</author>
	<creationDate>April 2017</creationDate>
	<copyright>Copyright (C) 2017</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>arkadiusz.taraszka@gmail.com</authorEmail>
	<authorUrl>brak</authorUrl>
	<version>1.0</version>
	<description>Wtyczka linki z ikon do FB i YouTube.</description>
	
	<files>
		<filename plugin="areksocial">areksocial.php</filename>
		<filename>index.html</filename>
		<filename>/addons/style.css</filename>
		<filename>/images/fb.png</filename>
	    <filename>/images/youtube.png</filename>
	</files>
		
	<languages>
		<language tag="pl-PL">pl-PL.plg_system_areksocial.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field
					name="link_fb"
					type="text" rows="12" cols="80"
					label="LINK_FB_AREKSOCIAL_FIELD_LABEL"
					description="LINK_FB_AREKSOCIAL_FIELD_DESC"
				/>
					<field
					name="link_youtube"
					type="text" rows="12" cols="80"
					label="LINK_YOUTUBE_AREKSOCIAL_FIELD_LABEL"
					description="LINK_YOUTUBE_AREKSOCIAL_FIELD_DESC"
				/>
				
			</fieldset>
		</fields>
	</config>

</extension>
