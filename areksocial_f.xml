<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="system" version="3.6.5" method="upgrade">
	<name>Arek social f</name>
	<author>Arkadiusz Taraszka</author>
	<creationDate>April 2017</creationDate>
	<copyright>Copyright (C) 2017</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>arkadiusz.taraszka@gmail.com</authorEmail>
	<authorUrl>brak</authorUrl>
	<version>1.0</version>
	<description>Wtyczka linki z ikon do FB i YouTube. Fonty typu awesome.</description>
	
	<files>
		<filename plugin="areksocial_f">areksocial_f.php</filename>
		<filename>index.html</filename>
		<folder>addons</folder>

	</files>
		
	<languages>
		<language tag="pl-PL">pl-PL.plg_system_areksocial_f.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="awesome"
					type="radio" 
					label="Czy ładować Font Awesome?" class="btn-group btn-group-yesno" default="1">
				
					  <option value="1">Tak</option>
					  <option value="0">Nie</option>
					</field>
				<field
					name="link_fb"
					type="text" rows="12" cols="80"
					label="LINK_FB_AREKSOCIAL_F_FIELD_LABEL"
					description="LINK_FB_AREKSOCIAL_F_FIELD_DESC"
				/>
					<field
					name="link_youtube"
					type="text" rows="12" cols="80"
					label="LINK_YOUTUBE_AREKSOCIAL_F_FIELD_LABEL"
					description="LINK_YOUTUBE_AREKSOCIAL_F_FIELD_DESC"
				/>
				<field
					name="link_insta"
					type="text" rows="12" cols="80"
					label="LINK_INSTAGRAM_AREKSOCIAL_F_FIELD_LABEL"
				/>
				
			</fieldset>
		</fields>
	</config>

</extension>
